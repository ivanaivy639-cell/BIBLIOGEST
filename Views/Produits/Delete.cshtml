@model GestionProduits.Models.Product
@{
    ViewData["Title"] = "Supprimer un produit";
}

<h1>Supprimer un produit</h1>
<p>Confirmer la suppression de ce produit ?</p>

<dl class="row">
    <dt class="col-sm-3">Nom</dt>
    <dd class="col-sm-9">@Model.Nom</dd>

    <dt class="col-sm-3">Auteur</dt>
    <dd class="col-sm-9">@Model.Auteur</dd>

    <dt class="col-sm-3">ISBN</dt>
    <dd class="col-sm-9">@Model.ISBN</dd>

    <dt class="col-sm-3">Categorie</dt>
    <dd class="col-sm-9">@Model.Categorie</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>
